        <item name="android:background">#CE93D8</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">40sp</item>
        <item name="android:padding">2sp</item>
        <item name="android:elevation">17sp</item>
    </style>

    <style name="ReltveLyoutImagenFScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150sp</item>
